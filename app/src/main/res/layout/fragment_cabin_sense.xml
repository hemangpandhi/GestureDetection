<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="32dp">

    <!-- HEADER -->
    <TextView
        android:id="@+id/cabinHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CABIN INTELLIGENCE"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- DRIVER CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/driverCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#2A2A2A"
        app:cardCornerRadius="16dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@id/cabinHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/passengerCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACTIVE DRIVER"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:letterSpacing="0.1"/>

            <TextView
                android:id="@+id/driverNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guest"
                android:textColor="@color/auto_accent"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_marginVertical="16dp"/>

            <!-- Name Input -->
            <EditText
                android:id="@+id/driverNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1A1A1A"
                android:hint="Enter Name"
                android:gravity="center"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/registerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTER FACE"
                android:backgroundTint="#444444"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- PASSENGER CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/passengerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        app:cardBackgroundColor="#2A2A2A"
        app:cardCornerRadius="16dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@id/cabinHeader"
        app:layout_constraintStart_toEndOf="@id/driverCard"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PASSENGER SEAT"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:letterSpacing="0.1"/>

            <TextView
                android:id="@+id/passengerStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VACANT"
                android:textColor="#555555"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginVertical="16dp"/>
            
             <TextView
                android:id="@+id/passengerActionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entertainment: OFF"
                android:textSize="14sp"
                android:textColor="#AAAAAA"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- FEATURES LIST -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/driverCard"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/settingsStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active Profile Settings"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"/>

        <!-- SEAT POSITION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Seat Position:"
                android:textColor="#AAAAAA"
                android:textSize="14sp"/>
            <Spinner
                android:id="@+id/seatSpinner"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="#333333"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"/>
        </LinearLayout>

        <!-- CLIMATE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Climate:"
                android:textColor="#AAAAAA"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/climateValue"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="22Â°C"
                android:textColor="@android:color/white"
                android:gravity="center"/>
            <SeekBar
                android:id="@+id/climateSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="14" 
                android:progress="6"/>
        </LinearLayout>

        <!-- MIRRORS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Mirror Mode:"
                android:textColor="#AAAAAA"
                android:textSize="14sp"/>
            <Spinner
                android:id="@+id/mirrorSpinner"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="#333333"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
