<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#D9000000"
        android:padding="32dp"
        android:layout_gravity="center"
        android:layout_margin="24dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DRIVER SAFETY MONITOR"
            android:textColor="#FF5252"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <!-- STATUS ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="STATUS:"
                android:textColor="#AAAAAA"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/safetyStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACTIVE"
                android:textColor="#00FF00"
                android:textSize="24sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- GAZE ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="GAZE:"
                android:textColor="#AAAAAA"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/gazeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Road Center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"/>
        </LinearLayout>

        <!-- LAST EVENT -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAST EVENT DETECTION"
            android:textColor="#AAAAAA"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
            
        <TextView
            android:id="@+id/lastEventText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:background="#33FFFFFF"/>

    </LinearLayout>
    
    <!-- BIG ALERT OVERLAY (Hidden by default) -->
    <TextView
        android:id="@+id/alertOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CCFF0000"
        android:gravity="center"
        android:text="WAKE UP!"
        android:textColor="#FFFFFF"
        android:textSize="80sp"
        android:textStyle="bold"
        android:visibility="gone"/>

</FrameLayout>
