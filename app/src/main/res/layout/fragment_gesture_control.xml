<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Info Overlay Inside the Preview (HUD Style) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#80000000"
        android:layout_gravity="bottom|start"
        android:layout_margin="24dp">
        
        <TextView
            android:id="@+id/lastGestureText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting for gesture..."
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <!-- Legend Overlay (Top Right) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#60000000"
        android:layout_gravity="top|end"
        android:layout_margin="24dp">
        <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Gestures:"
             android:textColor="#00E5FF"
             android:textSize="20sp"
             android:textStyle="bold"/>
        <TextView
             android:id="@+id/gestureLegend"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="• Fist: Play  • Palm: Pause\n• Point L/R: Prev/Next\n• Index: Vol -  • Two Finger: Vol +"
             android:textColor="#DDFFFFFF"
             android:textSize="20sp"/>
    </LinearLayout>

</FrameLayout>
