<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/auto_background"
    tools:context=".MainActivity">

    <!-- HEADER BAR -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#1E1E1E"
        android:paddingHorizontal="32dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GENESIS GESTURE CONTROL"
            android:textColor="@color/auto_accent"
            android:textSize="36sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System Ready"
            android:textColor="@color/auto_text_secondary"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@id/appTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="32dp"/>

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SETTINGS"
            android:textSize="20sp"
            android:padding="16dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/auto_accent"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- MAIN CONTENT AREA -->
    <!-- Camera Preview Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/previewCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="#000000"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerBar"
        app:layout_constraintBottom_toTopOf="@id/bottomControlBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@color/black" 
            android:contentDescription="Camera Stream" />
            
        <!-- Info Overlay Inside the Preview (HUD Style) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="#80000000"
            android:layout_gravity="bottom|start"
            android:layout_margin="24dp">
            
            <TextView
                android:id="@+id/lastGestureText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waiting for gesture..."
                android:textColor="@color/white"
                android:textSize="32sp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <!-- Legend Overlay (Top Right) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#60000000"
            android:layout_gravity="top|end"
            android:layout_margin="24dp">
            <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Gestures:"
                 android:textColor="@color/auto_accent"
                 android:textSize="20sp"
                 android:textStyle="bold"/>
            <TextView
                 android:id="@+id/gestureLegend"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="• Fist: Play  • Palm: Pause\n• Point L/R: Prev/Next\n• Index: Vol -  • Two Finger: Vol +"
                 android:textColor="#DDFFFFFF"
                 android:textSize="20sp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- BOTTOM CONTROL BAR (For IP Input) -->
    <LinearLayout
        android:id="@+id/bottomControlBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="#1E1E1E"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CAMERA URL:"
            android:textColor="@color/auto_text_secondary"
            android:textSize="20sp"
            android:layout_marginEnd="16dp"/>

        <EditText
            android:id="@+id/ipInput"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded"
            android:paddingHorizontal="20dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:maxLines="1"
            android:inputType="textUri"
            android:imeOptions="actionGo"
            android:text="http://192.168.0.101:8080/video"/>

        <Button
            android:id="@+id/connectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONNECT"
            android:textSize="20sp"
            android:padding="16dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="#333333"
            android:textColor="@color/white"/>
    </LinearLayout>

    <!-- SETTINGS OVERLAY (Full Screen Modal) -->
    <FrameLayout
        android:id="@+id/settingsOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:elevation="20dp">
        
        <androidx.cardview.widget.CardView
            android:layout_width="800dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            app:cardBackgroundColor="#252525"
            app:cardCornerRadius="0dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GESTURE MAPPINGS"
                    android:textColor="@color/auto_accent"
                    android:textSize="40sp"
                    android:letterSpacing="0.1"
                    android:textStyle="bold"
                    android:layout_marginBottom="48dp"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/settingsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!-- Dynamic Rows will be added here -->
                    </LinearLayout>
                </ScrollView>

                <Button
                    android:id="@+id/closeSettings"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="SAVE &amp; CLOSE"
                    android:textSize="24sp"
                    android:backgroundTint="@color/auto_success"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="32dp"/>
            
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
